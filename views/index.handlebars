<h1>Burger Time!</h1>

<h2>Burger list</h2>

<div id="available">
<ul>
    {{#each burgers}}
    {{#unless devoured}}
    <div class="burger">
    {{ burger_name }}
    </div>
    {{/unless}}
    {{/each}}
</ul>
</div>

<h2>Devoured list</h2>
<div id="devoured">
<ul>
    {{#each burgers}}
        {{#if devoured}}
        <div class="eaten">
            {{ burger_name }}
            </div>
        {{/if}}
    {{/each}}
</ul>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
   
  </div>

  <input id="burger_name" type="text" class="form-control form-control-lg">
    <div class="input-group-append">
  <button type="submit" id="submit">Add Burger</button>
    </div>
</form>